    <div class="col-8 offset-2">

    
    <h1><%= list.title %></h1>
    </div>
    <div class="listing-card card col-6 offset-2 show-card" >
          <img src="<%=list.image.url%>" class="card-img-top show-img" alt="list.title">
     <div class="card-body">
          <p class="card-text">Owned by <i><%= list.owner.username %></i></p>
          <p class="card-text">
            <%= list.description %><br>
          </p>
             <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN") %><br></p>
             <p class="card-text"><%= list.country %><br></p>
             <p class="card-text"><%= list.location %><br></p>
        
     </div>
   </div>
<% if(currUser && list.owner._id.equals(currUser._id)){Â %>
