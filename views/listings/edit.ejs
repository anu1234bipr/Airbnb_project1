<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2" >
    <h1>
        Edit Listing
    </h1>
    <form method="post" action="/listings/<%=list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
         <label for="title" class="form-label">Title</label>
         <input name="listing[title]" placeholder="<%=list.title%>" type="text" class="form-control" required></input>
         <div class="invalid-feedback">
        Please enter a valid Title.
      </div>
      </div>
      <div class="mb-3">
         <label for="description" class="form-label" >Description</label>
         <textarea name="listing[description]" type="text" class="form-control" required><%=list.description%></textarea>
         <div class="invalid-feedback">
        Please enter a short Description.
      </div>
      </div>
        <div class="mb-3">
          Orginal Listing Image<br>
           <img src="<%=listingurl%>">
        </div>
        <div class="mb-3">
         <label for="image" class="form-label">Upload New Image</label>
         <input name="listing[image]"  type="file" class="form-control" ></input>
       </div>
       <div class="row">
            <div class="mb-3 col-md-4">
               <label for="price" class="form-label">Price</label>
               <input name="listing[price]" placeholder="<%=list.price%>" type="number" class="form-control" required></input>
               <div class="invalid-feedback">
        Please enter a valid Price.
      </div>
            </div>
            <div class="mb-3 col-md-8">
               <label for="country" class="form-label">Country</label>
               <input name="listing[country]" placeholder="<%=list.country%>" type="text" class="form-control" required></input>
               <div class="invalid-feedback">
        Please enter a valid country.
      </div>
            </div>
       </div>
       
       <div class="mb-3">
         <label for="location" class="form-label">Location</label>
         <input name="listing[location]" placeholder="<%=list.location%>" type="text" class="form-control" required></input>
         <div class="invalid-feedback">
        Please enter a valid location.
      </div>
       </div>
      <button type="submit" class="btn btn-dark edit-btn mt-2">Edit</button>
      <br><br>
    </form>
  </div>  
</div>
</body>
